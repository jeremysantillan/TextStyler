<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.santillanj.textstyler.textstyler.MainActivity">

    <EditText
        android:id="@+id/txtfld1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="15pt" />

    <CheckBox
        android:id="@+id/chckbxBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtfld1"
        android:checked="false"
        android:text="Bold"
        android:textSize="15pt"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/chckbxItalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chckbxBold"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:text="Italic"
        android:textSize="15pt"
        android:textStyle="italic" />



<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/chckbxBold"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/rbtnRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/chckbxBold"
            android:checked="false"
            android:text="@string/red"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15pt" />

        <RadioButton
            android:id="@+id/rbtnGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rbtnRed"
            android:checked="false"
            android:text="@string/green"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15pt" />

    <RadioButton
        android:id="@+id/rdbtnBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/blue"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15pt"
        android:layout_below="@+id/rbtnGreen"
        android:layout_alignRight="@+id/chckbxBold"
        android:layout_alignEnd="@+id/chckbxBold" />


</RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtviewResult"
        android:textSize="18pt"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
